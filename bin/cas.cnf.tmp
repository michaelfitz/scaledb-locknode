#scaledb_data_directory    = OPENSHIFT_MARIADB_DIR/michael44/scaledb/data
#scaledb_db_directory test = OPENSHIFT_MARIADB_DIR/michael44/scaledb/data/test
#scaledb_log_directory     = OPENSHIFT_MARIADB_DIR/michael44/scaledb/logs


scaledb_data_directory    = /tmp/data
scaledb_db_directory test = /tmp/data/test
scaledb_log_directory     = /tmp/logs

scaledb_io_threads = 4
#scaledb_data_io_flags=2
#scaledb_logs_io_flags=2

# use nc + ip + port
# scaledb_service_port = 15000

scaledb_cas_server_ips = OPENSHIFT_MARIADB_DB_HOST
scaledb_cas_server_ports = OPENSHIFT_CAS_PORT


run_debug_tests = false
scaledb_log_file_max_size=100
scaledb_max_file_handles = 1
scaledb_enable_optimization = false
scaledb_slm_threads = 4

scaledb_buffer_size_index = 10M
scaledb_buffer_size_data = 20M
scaledb_buffer_size_blob = 10M

scaledb_hash_lookup_size = 10M
scaledb_internal_version = true
#setting to 0 will cause hangs
#scaledb_dead_lock_milliseconds = 3000
scaledb_dead_lock_milliseconds = 0
scaledb_max_column_length_in_base_file = 4
scaledb_cluster_user = root

scaledb_debug_buffer_size = 10000

scaledb_flush_ahead = true
scaledb_debug = true
scaledb_debug_interactive=true

scaledb_log_sql = false
show_memory_usage = false


#scaledb_debug_file=stdout
scaledb_debug_lines_per_file = 1000000
scaledb_debug_files_count = 2
scaledb_debug_locking_mode = false

#scaledb_autocommit = 2

slm_debug = false
slm_debug_interactive = true
slm_debug_file=stdout
slm_debug_lines_per_file = 100000
slm_debug_files_count = 5

#cas_recovery_mode = high

